<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profile_parent"
    android:background="@drawable/toolbar_back"
    tools:context=".activity.Addprofile">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="40dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="30dp"
        android:backgroundTint="#00000000"
        app:cardElevation="5dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="30dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/img_edt"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/image"
                    android:src="@drawable/user"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:background="@drawable/button_reg"
                    android:textColor="@color/white"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="4dp"
                    android:textSize="16sp"
                    android:id="@+id/edt_btn"
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"
                    android:text="Add Image"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="#0000"
                    android:id="@+id/more_card"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom_nav_back"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:id="@+id/cam"
                            android:src="@drawable/camera"/>
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:id="@+id/gall"
                            android:src="@drawable/gallery"/>
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:id="@+id/del"
                            android:src="@drawable/delete"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_edt"
                android:hint="Insert your name"
                android:textColor="@color/black"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:layout_marginTop="40dp"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:cursorVisible="false"
                android:background="@drawable/addprofileback"
                android:backgroundTint="@color/white"
                android:id="@+id/name"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="About"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:cursorVisible="false"
                android:text="I'm with the Flow"
                android:background="@drawable/addprofileback"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_below="@+id/name"
                android:id="@+id/about"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textSize="18sp"
                android:fontFamily="@font/open_sans"
                android:layout_marginTop="30dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp"
                android:id="@+id/nxt_btn"
                android:layout_below="@+id/about"
                android:textColor="@color/white"
                android:background="@drawable/button_reg"
                android:layout_centerHorizontal="true"/>
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/about"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:visibility="gone"
                android:background="@drawable/button_reg"
                android:id="@+id/progressbar"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_edt"
                android:layout_marginTop="-20dp"
                app:cardCornerRadius="14dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:id="@+id/img_option">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="140px"
                        android:layout_height="140px"
                        android:layout_margin="10dp"
                        android:id="@+id/camera"
                        android:src="@drawable/camera"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="140px"
                        android:layout_height="140px"
                        android:layout_margin="10dp"
                        android:id="@+id/gallery"
                        android:src="@drawable/gallery"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="140px"
                        android:layout_height="140px"
                        android:layout_margin="10dp"
                        android:id="@+id/delete"
                        android:src="@drawable/delete"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>