<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProfile">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userimg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:src="@drawable/user" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/userimg"
        android:id="@+id/cams"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_margin="10dp"
            android:id="@+id/cam"
            android:src="@drawable/camera"/>
        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_margin="10dp"
            android:id="@+id/gall"
            android:src="@drawable/gallery"/>
        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_margin="8dp"
            android:id="@+id/del"
            android:src="@drawable/delete"/>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_alignParentRight="true"
        app:cardElevation="40dp"
        android:id="@+id/name"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="40dp"
        android:layout_below="@+id/theme_switch"
        app:cardBackgroundColor="@color/white">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Set Your Name here"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:cursorVisible="false"
            android:id="@+id/username"
            android:fontFamily="@font/amiko_semibold"
            android:background="@drawable/editext_bg"/>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_alignParentRight="true"
        app:cardElevation="40dp"
        android:id="@+id/status"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/name"
        app:cardBackgroundColor="@color/white">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Set Your Status here"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="I'm with the Flow"
            android:id="@+id/userabt"
            android:cursorVisible="false"
            android:fontFamily="@font/amiko_semibold"
            android:background="@drawable/editext_bg"/>

    </androidx.cardview.widget.CardView>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nxt_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="19sp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="80dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/getstartedbtn_back"
        android:paddingHorizontal="42dp"
        android:text="Next"
        android:layout_below="@+id/status"
        android:textColor="@color/white" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@id/status"
        android:id="@+id/progressbar"/>



</RelativeLayout>