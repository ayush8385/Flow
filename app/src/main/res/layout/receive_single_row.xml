<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="?selectableItemBackground"
    android:id="@+id/msg_par"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/select"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_baseline_done_24"
        android:layout_centerVertical="true"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/msg_box"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:fontFamily="@font/open_sans"
            android:id="@+id/msg_time"
            android:text="05::00 pm" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:fontFamily="@font/open_sans"
            android:id="@+id/msg_date"
            android:text="05/12/21" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_msg"
        android:layout_width="200dp"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_height="200dp"
        android:visibility="gone"
        android:layout_alignParentTop="true" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginVertical="4dp"
        android:id="@+id/msg_box"
        android:background="@drawable/receive_back"
        android:layout_alignParentLeft="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="260dp"
            android:textSize="16sp"
            android:fontFamily="@font/senregular"
            android:id="@+id/txt_msg"
            android:text=""
            android:textColor="@color/white"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="9sp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="-4dp"
        android:layout_below="@+id/msg_box"
        android:fontFamily="@font/open_sans"
        android:id="@+id/txt_seen"
        android:visibility="gone"
        android:text=""/>

    <ProgressBar
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/bottom_nav_back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:visibility="gone"
        android:id="@+id/progressbar"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/download"/>

</RelativeLayout>