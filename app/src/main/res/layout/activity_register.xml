<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reg_back"
    tools:context=".flow.Register">

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:layout_marginLeft="40dp"
        android:id="@+id/create"
        android:layout_marginBottom="120dp"
        android:layout_above="@+id/details"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/michroma"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:id="@+id/details"
        android:layout_marginHorizontal="20dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="13sp"
            android:fontFamily="@font/michroma"
            android:layout_marginLeft="3dp"
            android:textColor="@color/white"
            android:id="@+id/email_txt"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:cursorVisible="false"
            android:drawableLeft="@drawable/mail"
            android:drawablePadding="10dp"
            android:backgroundTint="@color/white"
            android:layout_below="@id/email_txt"
            android:id="@+id/email_edt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:textSize="13sp"
            android:fontFamily="@font/michroma"
            android:layout_marginLeft="3dp"
            android:layout_below="@+id/email_edt"
            android:textColor="@color/white"
            android:id="@+id/number_txt"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:cursorVisible="false"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/number"
            android:layout_below="@id/number_txt"
            android:id="@+id/number_edt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:fontFamily="@font/michroma"
            android:layout_marginLeft="3dp"
            android:textSize="13sp"
            android:layout_below="@+id/number_edt"
            android:textColor="@color/white"
            android:id="@+id/pass_txt"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:cursorVisible="false"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/lock"
            android:paddingRight="15dp"
            android:drawableLeft="@drawable/key"
            android:backgroundTint="@color/white"
            android:layout_below="@id/pass_txt"
            android:id="@+id/pass_edt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textSize="13sp"
            android:fontFamily="@font/michroma"
            android:layout_marginLeft="3dp"
            android:layout_below="@+id/pass_edt"
            android:textColor="@color/white"
            android:id="@+id/cnfpass_txt"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:paddingRight="15dp"
            android:drawablePadding="10dp"
            android:cursorVisible="false"
            android:drawableRight="@drawable/lock"
            android:drawableLeft="@drawable/key"
            android:layout_below="@id/cnfpass_txt"
            android:id="@+id/cnfpass_edt"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="20sp"
            android:fontFamily="@font/michroma"
            android:layout_marginTop="30dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="30dp"
            android:id="@+id/register_button"
            android:textColor="@color/white"
            android:background="@drawable/button_reg"
            android:layout_below="@+id/cnfpass_edt"
            android:layout_centerInParent="true"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cnfpass_edt"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:visibility="gone"
            android:background="@drawable/button_reg"
            android:id="@+id/progressbar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:id="@+id/signin"
            android:fontFamily="@font/michroma"
            android:layout_centerHorizontal="true"
            android:textColor="#B5B6B6"
            android:layout_below="@+id/register_button"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:id="@+id/signup"
            android:visibility="gone"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/michroma"
            android:layout_centerHorizontal="true"
            android:textColor="#B5B6B6"
            android:layout_below="@+id/register_button"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textSize="15sp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:id="@+id/forgot"
            android:fontFamily="@font/michroma"
            android:layout_centerHorizontal="true"
            android:textColor="#B5B6B6"
            android:layout_below="@+id/register_button"/>
    </RelativeLayout>


</RelativeLayout>