<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/paren"
    android:background="?selectableItemBackground"
    android:layout_marginBottom="7dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:background="?selectableItemBackground"
        android:paddingVertical="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/profile_pic"
            android:layout_centerVertical="true"
            android:src="@drawable/user"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/profile_pic"
            android:fontFamily="@font/senbold"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:text="fdsfkhjk"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxWidth="300dp"
            android:text=""
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/profile_name"
            android:layout_toRightOf="@+id/profile_pic"
            android:textSize="13sp"
            android:textStyle="normal"
            android:fontFamily="@font/senregular"
            android:id="@+id/profile_msg"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timer"
                android:text=""
                android:fontFamily="@font/open_sans"
                android:layout_centerHorizontal="true"
                android:paddingHorizontal="6dp"
                android:textSize="10sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/unread_chat"
                android:background="@drawable/story_unread_back"
                android:text=""
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/timer"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:paddingHorizontal="6dp"
                android:textColor="@color/white"
                android:textSize="13sp"/>
        </RelativeLayout>
    </RelativeLayout>
<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0.5dp"-->
<!--        android:background="#6E6C6C"-->
<!--        android:layout_marginHorizontal="20dp"/>-->

</RelativeLayout>