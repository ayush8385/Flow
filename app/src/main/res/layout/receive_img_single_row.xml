<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?selectableItemBackground"
    android:id="@+id/msg_par"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/select"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_baseline_done_24"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/box"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:fontFamily="@font/open_sans"
            android:id="@+id/msg_time"
            android:text="05::00 pm" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:fontFamily="@font/open_sans"
            android:id="@+id/msg_date"
            android:text="05/12/21" />
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_marginVertical="4dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="15dp"
        android:id="@+id/box"
        android:layout_height="160dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/msg_box"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_msg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <View
                android:id="@+id/dim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#C3000000" />
            <ProgressBar
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:indeterminateTint="@color/white"
                android:background="@android:color/transparent"
                android:id="@+id/progressbar"/>
            <ImageView
                android:id="@+id/download_bar"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_baseline_downloading_24"
                android:tint="@color/white"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <com.aghajari.emojiview.view.AXEmojiTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/txt_msg" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="9sp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="-4dp"
        android:layout_below="@+id/box"
        android:fontFamily="@font/open_sans"
        android:id="@+id/txt_seen"
        android:visibility="gone"
        android:text=""/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/download"/>
</RelativeLayout>