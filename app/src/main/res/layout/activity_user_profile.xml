<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/user_parent"
    android:background="@color/back"
    tools:context=".activity.UserProfile">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="2dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
        android:id="@+id/back"/>

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/user">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/user"
            android:id="@+id/user_img" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/edt_img"
            android:clickable="true"
            android:backgroundTint="@color/lightdark"
            android:focusable="true"
            android:elevation="10dp"
            app:fabSize="auto"
            android:src="@drawable/ic_baseline_edit_24"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:id="@+id/person"
                android:src="@drawable/ic_baseline_person_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_name"
                android:fontFamily="@font/senregular"
                android:text=""
                android:maxWidth="250dp"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:textSize="22sp"
                android:layout_toRightOf="@+id/person"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/edt_name"
                android:src="@drawable/ic_baseline_edit_24"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:id="@+id/about"
                android:src="@drawable/ic_baseline_info_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_about"
                android:fontFamily="@font/senregular"
                android:text=""
                android:maxWidth="250dp"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:textSize="22sp"
                android:layout_toRightOf="@+id/about"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/edt_abt"
                android:src="@drawable/ic_baseline_edit_24"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:id="@+id/number"
                android:src="@drawable/ic_baseline_call_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_number"
                android:fontFamily="@font/open_sans"
                android:text=""
                android:maxWidth="250dp"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:textSize="22sp"
                android:layout_toRightOf="@+id/number"
                android:layout_marginLeft="20dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/bottom_back"
            android:layout_marginVertical="30dp"
            android:paddingVertical="10dp"
            android:id="@+id/settings"
            android:layout_marginHorizontal="50dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign out"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/black"
        android:id="@+id/sign_out"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="#0000"
        android:id="@+id/img_card"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/user"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_nav_back"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:id="@+id/cam"
                android:src="@drawable/camera"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:id="@+id/gall"
                android:src="@drawable/gallery"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:id="@+id/del"
                android:src="@drawable/delete"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>




</RelativeLayout>