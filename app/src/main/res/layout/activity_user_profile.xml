<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/user_parent"
    android:background="@color/back"
    tools:context=".activity.UserProfile">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="2dp"
        android:layout_marginLeft="20dp"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
        android:id="@+id/back"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/user">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:src="@drawable/user"
            android:layout_centerHorizontal="true"
            android:id="@+id/user_img" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/edt_img"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/lightdark"
            android:focusable="true"
            android:elevation="10dp"
            android:layout_marginRight="15dp"
            app:fabSize="auto"
            android:src="@drawable/ic_baseline_edit_24"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:id="@+id/person"
                android:src="@drawable/ic_baseline_person_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_name"
                android:fontFamily="@font/senregular"
                android:text=""
                android:maxWidth="250dp"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:textSize="22sp"
                android:layout_toRightOf="@+id/person"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/edt_name"
                android:src="@drawable/ic_baseline_edit_24"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:id="@+id/about"
                android:src="@drawable/ic_baseline_info_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_about"
                android:fontFamily="@font/senregular"
                android:text=""
                android:maxWidth="250dp"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:textSize="22sp"
                android:layout_toRightOf="@+id/about"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/edt_abt"
                android:src="@drawable/ic_baseline_edit_24"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:id="@+id/number"
                android:src="@drawable/ic_baseline_call_24"
                app:tint="@color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_number"
                android:fontFamily="@font/open_sans"
                android:text=""
                android:maxWidth="250dp"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:textSize="22sp"
                android:layout_toRightOf="@+id/number"
                android:layout_marginLeft="20dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/bottom_back"
            android:layout_marginVertical="30dp"
            android:paddingVertical="10dp"
            android:id="@+id/settings"
            android:layout_marginHorizontal="50dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign out"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/black"
        android:id="@+id/sign_out"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="#0000"
        android:id="@+id/img_card"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/user"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_nav_back"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:id="@+id/cam"
                android:src="@drawable/camera"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:id="@+id/gall"
                android:src="@drawable/gallery"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:id="@+id/del"
                android:src="@drawable/delete"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/update_img_now"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5000000"
        android:visibility="gone"
        android:translationZ="60dp">

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateTint="#F7FFFFFF"
            android:padding="10dp" />

        <com.ayush.flow.activity.TouchImageView
            android:id="@+id/update_select_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"/>



        <ImageView
            android:id="@+id/back_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/chat_back"
            android:backgroundTint="@color/black"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:tint="@color/white"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />

        <ImageView
            android:id="@+id/updimg_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/send" />
    </RelativeLayout>




</RelativeLayout>