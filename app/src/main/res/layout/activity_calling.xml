<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    tools:context=".flow.activity.Calling">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:id="@+id/back_img"/>
    <View
        android:id="@+id/dim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B4000000" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#E43D3E3E">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/user"
                android:scaleType="centerCrop"
                android:layout_marginTop="60dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/user_img"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_img"
                android:text="Mark"
                android:textColor="@color/white"
                android:id="@+id/user_name"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/open_sans"
                android:textSize="22sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_name"
                android:id="@+id/status"
                android:text="Calling..."
                android:textColor="@color/white"
                android:fontFamily="@font/michroma"
                android:layout_centerHorizontal="true"
                android:textSize="8sp"/>


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/call_back"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:scaleType="centerCrop"
                android:padding="18dp"
                android:id="@+id/pick_btn"
                android:src="@drawable/ic_baseline_call_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Answer"
                android:fontFamily="@font/michroma"
                android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/pick_btn"
                android:layout_marginLeft="50dp"
                android:textSize="12sp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/callend_back"
                android:layout_marginRight="40dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:padding="18dp"
                android:id="@+id/end_btn"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_baseline_call_end_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decline"
                android:fontFamily="@font/michroma"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/end_btn"
                android:layout_marginRight="50dp"
                android:textSize="12sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="40dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/calltext_back"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:textAlignment="center"
                    android:text="I'll calll you back!"
                    android:textColor="@color/white"
                    android:fontFamily="@font/michroma"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/calltext_back"
                    android:text="Sorry, can't talk right now"
                    android:textColor="@color/white"
                    android:fontFamily="@font/michroma"
                    android:textSize="16sp"/>
                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="Type Message..."
                    android:textColorHint="@color/white"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:paddingHorizontal="18dp"
                    android:layout_marginTop="6dp"
                    android:paddingVertical="12dp"
                    android:background="@drawable/calltext_back"
                    android:cursorVisible="false"
                    android:fontFamily="@font/michroma"
                    android:layout_marginBottom="16dp"
                    android:textSize="16sp"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>