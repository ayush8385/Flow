<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".activity.Dashboard">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_detail"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/michroma"
            android:text="Messages"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/mode"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/user_img"
            android:background="?selectableItemBackgroundBorderless" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/user"
            android:id="@+id/user_img"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_shadow"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_below="@id/title_detail"
        android:orientation="horizontal"
        android:id="@+id/search_detail"
        android:layout_marginHorizontal="16dp">
        <androidx.appcompat.widget.SearchView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:queryHint="Search for friend..."
            android:focusable="false"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/contact"
            android:layout_marginRight="30dp"
            android:id="@+id/chat_searchview"
            android:layout_centerVertical="true"
            app:queryBackground="@android:color/transparent"
            android:background="@drawable/addprofileback"/>
        <ImageView
            android:layout_width="39dp"
            android:layout_height="40dp"
            android:elevation="10dp"
            android:src="@drawable/new_chat"
            android:id="@+id/contact"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stories"
        android:layout_marginTop="10dp"
        android:id="@+id/stories"
        android:textColor="@color/black"
        android:layout_below="@id/search_detail"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:fontFamily="@font/senregular"/>

    <LinearLayout
        android:id="@+id/story_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stories"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/story_img"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/bottom_back"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_add_24" />

            <TextView
                android:id="@+id/story_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/story_img"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/senregular"
                android:text="Me"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/storyrecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/story_single_row" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chats"
        android:id="@+id/chats"
        android:layout_marginTop="6dp"
        android:textColor="@color/black"
        android:layout_below="@id/story_box"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:fontFamily="@font/senregular"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/hidden"
        android:layout_marginTop="6dp"
        android:id="@+id/hidden"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/story_box"/>
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_baseline_close_24"
        android:layout_marginTop="6dp"
        android:id="@+id/close_hidden"
        android:visibility="gone"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/story_box"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatsrecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chats"
        android:layout_marginTop="5dp"
        android:clipToPadding="false"
        android:paddingBottom="60dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="120dp"
            android:layout_centerInParent="true"
            app:cardCornerRadius="30dp"
            android:outlineSpotShadowColor="@color/black"
            android:elevation="5dp"
            app:cardElevation="50dp"
            android:layout_height="wrap_content">
            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/bottom_back"
                android:elevation="8dp"
                app:itemIconTint="@color/bottom"
                app:labelVisibilityMode="unlabeled"
                android:layout_alignParentBottom="true"
                app:menu="@menu/home_bottom_menu" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>



</RelativeLayout>