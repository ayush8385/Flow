<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/toolbar_back"
    tools:context=".activity.Dashboard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_detail"
        android:background="@drawable/toolbar_back"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/michroma"
            android:text="Messages"
            android:id="@+id/title"
            android:textColor="@color/white"
            android:textSize="22sp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/user"
            android:id="@+id/user_img"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_below="@id/title_detail"
        android:orientation="horizontal"
        android:id="@+id/search_detail"
        android:layout_marginHorizontal="20dp">
        <androidx.appcompat.widget.SearchView
            style="@style/SearchViewStyle"
            android:layout_width="300dp"
            android:layout_height="40dp"
            app:queryHint="Search for friend..."
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/contact"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/addprofileback"/>
        <ImageView
            android:layout_width="39dp"
            android:layout_height="40dp"
            android:elevation="10dp"
            android:src="@drawable/contact_book"
            android:id="@+id/contact"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stories"
        android:id="@+id/stories"
        android:textColor="@color/white"
        android:layout_below="@id/search_detail"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:fontFamily="@font/open_sans"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal"
        android:id="@+id/story_box"
        android:layout_below="@id/stories">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="16dp"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/story_img"
                android:background="@drawable/story_unread_back"
                android:src="@drawable/ic_baseline_add_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Me"
                android:id="@+id/story_txt"
                android:layout_below="@+id/story_img"
                android:layout_centerHorizontal="true"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/storyrecycler"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chats"
        android:id="@+id/chats"
        android:layout_marginTop="6dp"
        android:textColor="@color/white"
        android:layout_below="@id/story_box"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:fontFamily="@font/open_sans"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chats"
        android:layout_marginTop="5dp"
        android:paddingBottom="60dp"
        android:clipToPadding="false"
        android:id="@+id/chatsrecycler"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_nav_back"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="120dp"
            android:layout_centerInParent="true"
            app:cardCornerRadius="30dp"
            android:elevation="5dp"
            app:cardElevation="50dp"
            android:layout_height="wrap_content">
            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/bottom_back"
                android:elevation="8dp"
                app:itemIconTint="@color/bottom"
                app:labelVisibilityMode="unlabeled"
                android:layout_alignParentBottom="true"
                app:menu="@menu/home_bottom_menu" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>